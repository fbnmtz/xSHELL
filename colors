# Description: 
#  > xshell colors library
# ############################################################################
# HISTORY:
#

_xLIB_COLORS_=true

# shellcheck disable=SC2034
# `-> ignore alert about declared variables but not used

# setup colors (define variables)
xsEnableColors(){
  # Reset all attributes
  RESET='\033[0m'

  # Style attributes
  BOLD='\033[1m'
  DIM='\033[2m'
  ITALIC='\033[3m'
  UNDERLINED='\033[4m'
  BLINK='\033[5m'
  REVERSE='\033[7m'
  HIDDEN='\033[8m'

  # Foreground colors
  BLACK='\033[30m'
  RED='\033[31m'
  GREEN='\033[32m'
  YELLOW='\033[33m'
  BLUE='\033[34m'
  MAGENTA='\033[35m'
  CYAN='\033[36m'
  WHITE='\033[37m'

  # Background colors
  BGBLACK='\033[40m'
  BGRED='\033[41m'
  BGGREEN='\033[42m'
  BGYELLOW='\033[43m'
  BGBLUE='\033[44m'
  BGMAGENTA='\033[45m'
  BGCYAN='\033[46m'
  BGWHITE='\033[47m' 

  # create ALIASES for all attributes and colors
  ATTR_BOLD=${BOLD}
  ATTR_DIM=${DIM}
  ATTR_ITALIC=${ITALIC}
  ATTR_UNDERLINED=${UNDERLINED}
  ATTR_BLINK=${BLINK}
  ATTR_REVERSE=${REVERSE}
  ATTR_HIDDEN=${HIDDEN}

  FG_BLACK=${BLACK}
  FG_RED=${RED}
  FG_GREEN=${GREEN}
  FG_YELLOW=${YELLOW}
  FG_BLUE=${BLUE}
  FG_MAGENTA=${MAGENTA}
  FG_CYAN=${CYAN}
  FG_WHITE=${WHITE}

  BG_BLACK=${BGBLACK}
  BG_RED=${BGRED}
  BG_GREEN=${BGGREEN}
  BG_YELLOW=${BGYELLOW}
  BG_BLUE=${BGBLUE}
  BG_MAGENTA=${BGMAGENTA}
  BG_CYAN=${BGCYAN}
  BG_WHITE=${BGWHITE}
}

# unset all colors/attributes 
xsDisableColors(){
  for var in RESET BOLD DIM ITALIC UNDERLINE BLINK REVERSE HIDDEN \
    ATTR_BOLD ATTR_DIM ATTR_ITALIC ATTR_UNDERLINED ATTR_BLINK ATTR_REVERSE ATTR_HIDDEN \
    BLACK RED GREEN YELLOW BLUE MAGENTA CYAN WHITE \
    BGBLACK BGRED BGGREEN BGYELLOW BGBLUE BGMAGENTA BGCYAN BGWHITE \
    BG_BLACK BG_RED BG_GREEN BG_YELLOW BG_BLUE BG_MAGENTA BG_CYAN BG_WHITE; do 
    unset $var
  done
}

# print all colors/attributes in this library
xsColors(){
  echo -e "${BOLD}BOLD${RESET}"
  echo -e "${DIM}DIM${RESET}"
  echo -e "${ITALIC}ITALIC${RESET}"
  echo -e "${UNDERLINED}UNDERLINED${RESET}"
  echo -e "${BLINK}BLINK${RESET}"
  echo -e "${REVERSE}REVERSE${RESET}"
  echo -e "${HIDDEN}HIDDEN${RESET}"

  echo -e "${BLACK}BLACK${RESET}"
  echo -e "${RED}RED${RESET}"
  echo -e "${GREEN}GREEN${RESET}"
  echo -e "${YELLOW}YELLOW${RESET}"
  echo -e "${BLUE}BLUE${RESET}"
  echo -e "${MAGENTA}MAGENTA${RESET}"
  echo -e "${CYAN}CYAN${RESET}"
  echo -e "${WHITE}WHITE${RESET}"

  echo -e "${BGBLACK}BGBLACK${RESET}"
  echo -e "${BGRED}BGRED${RESET}"
  echo -e "${BGGREEN}BGGREEN${RESET}"
  echo -e "${BGYELLOW}BGYELLOW${RESET}"
  echo -e "${BGBLUE}BGBLUE${RESET}"
  echo -e "${BGMAGENTA}BGMAGENTA${RESET}"
  echo -e "${BGCYAN}BGCYAN${RESET}"
  echo -e "${BGWHITE}BGWHITE${RESET}"
}

# enable colors by default (when this file/library is loaded)
xsEnableColors